<Window
    x:Class="NCMConverter.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NCMConverter"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NCM 转换器"
    Width="1000"
    Height="600"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="Microsoft YaHei"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style
            x:Key="ToolBarButtonStyle"
            BasedOn="{StaticResource MaterialDesignRaisedButton}"
            TargetType="Button">
            <Setter Property="Margin" Value="0,0,8,0" />
            <Setter Property="MinWidth" Value="100" />
            <Setter Property="Padding" Value="12,6" />
        </Style>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <!-- 隐藏滚动条但保持功能的样式 -->
        <Style x:Key="HiddenScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Width" Value="0"/>
            <Setter Property="Height" Value="0"/>
            <Setter Property="Opacity" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>

        <!--  工具栏  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,15"
            Orientation="Horizontal">
            <Button Command="{Binding AddFileCommand}" Style="{StaticResource ToolBarButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Margin="0,0,5,0" Kind="FilePlus" />
                    <TextBlock Text="添加文件" />
                </StackPanel>
            </Button>

            <Button Command="{Binding AddFolderCommand}" Style="{StaticResource ToolBarButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Margin="0,0,5,0" Kind="FolderPlus" />
                    <TextBlock Text="添加目录" />
                </StackPanel>
            </Button>

            <Button Command="{Binding ClearListCommand}" Style="{StaticResource ToolBarButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Margin="0,0,5,0" Kind="TrashCan" />
                    <TextBlock Text="清除列表" />
                </StackPanel>
            </Button>

            <Button
                Background="{DynamicResource PrimaryHueMidBrush}"
                Command="{Binding StartProcessCommand}"
                Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                Style="{StaticResource ToolBarButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Margin="0,0,5,0" Kind="Play" />
                    <TextBlock Text="开始处理" />
                </StackPanel>
            </Button>
        </StackPanel>

        <GroupBox
            Grid.Row="1"
            Margin="0,0,0,15"
            Header="保存选项"
            Style="{StaticResource MaterialDesignCardGroupBox}">
            <Grid Margin="6,4,6,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <RadioButton
                    Grid.Column="0"
                    Content="源文件所在目录"
                    IsChecked="{Binding IsSaveToSourceFolder, Mode=TwoWay}"
                    Style="{StaticResource MaterialDesignRadioButton}" />
                <RadioButton
                    Grid.Column="1"
                    Margin="15,0,0,0"
                    Content="自定义保存目录"
                    IsChecked="{Binding IsSaveToCustomFolder, Mode=TwoWay}"
                    Style="{StaticResource MaterialDesignRadioButton}" />

                <TextBox
                    Grid.Column="3"
                    Height="35"
                    Margin="15,0,0,0"
                    Padding="8,4,8,4"
                    VerticalContentAlignment="Center"
                    materialDesign:HintAssist.Hint="保存目录路径"
                    FontSize="12"
                    IsEnabled="{Binding IsSaveToCustomFolder}"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding CustomSavePath, UpdateSourceTrigger=PropertyChanged}" />

                <Button
                    Grid.Column="4"
                    Height="28"
                    Margin="8,0,0,0"
                    Padding="8,3"
                    Command="{Binding BrowseFolderCommand}"
                    IsEnabled="{Binding IsSaveToCustomFolder}"
                    Style="{StaticResource MaterialDesignOutlinedButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Margin="0,0,4,0" Kind="FolderOpen" />
                        <TextBlock Text="浏览" />
                    </StackPanel>
                </Button>
            </Grid>
        </GroupBox>

        <!--  文件列表  -->
        <DataGrid
            x:Name="FileListDataGrid"
            Grid.Row="2"
            VerticalContentAlignment="Center"
            materialDesign:DataGridAssist.CellPadding="8 4 8 4"
            materialDesign:DataGridAssist.ColumnHeaderPadding="8"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserReorderColumns="False"
            CanUserResizeColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding FileList}"
            RowHeight="45"
            SelectionMode="Single"
            Style="{StaticResource MaterialDesignDataGrid}">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="100" Header="状态">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Name="WaitIcon"
                                    Width="14"
                                    Height="14"
                                    Margin="1,0"
                                    Foreground="#888888"
                                    Kind="Clock" />
                                <materialDesign:PackIcon
                                    Name="SuccessIcon"
                                    Width="14"
                                    Height="14"
                                    Margin="1,0"
                                    Foreground="#4CAF50"
                                    Kind="CheckCircle"
                                    Visibility="Collapsed" />
                                <materialDesign:PackIcon
                                    Name="ErrorIcon"
                                    Width="14"
                                    Height="14"
                                    Margin="1,0"
                                    Foreground="#F44336"
                                    Kind="CloseCircle"
                                    Visibility="Collapsed" />
                                <TextBlock
                                    Margin="3,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Status}" />
                            </StackPanel>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="等待">
                                    <Setter TargetName="WaitIcon" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="SuccessIcon" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="ErrorIcon" Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="完成">
                                    <Setter TargetName="WaitIcon" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="SuccessIcon" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="ErrorIcon" Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="失败">
                                    <Setter TargetName="WaitIcon" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="SuccessIcon" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="ErrorIcon" Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTemplateColumn.HeaderStyle>
                </DataGridTemplateColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding FilePath}"
                    Header="文件">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Width="60" Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Width="24"
                                Height="24"
                                Margin="0"
                                Padding="4"
                                Command="{Binding DataContext.RemoveFileCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource MaterialDesignFlatButton}">
                                <materialDesign:PackIcon
                                    Width="14"
                                    Height="14"
                                    Kind="TrashCan" />
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!--  日志显示  -->
        <GroupBox
            Grid.Row="3"
            Margin="0,8,0,0"
            Header="日志"
            Style="{StaticResource MaterialDesignCardGroupBox}">
            <TextBox
                x:Name="LogTextBox"
                Padding="5"
                Background="Transparent"
                BorderThickness="0"
                FontSize="10"
                IsReadOnly="True"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding UpdateLog}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto">
                <TextBox.Resources>
                    <Style TargetType="ScrollBar" BasedOn="{StaticResource HiddenScrollBarStyle}" />
                </TextBox.Resources>
            </TextBox>
        </GroupBox>

    </Grid>
</Window>
